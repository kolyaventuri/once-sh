{
  "name": "once-sh",
  "version": "1.0.0",
  "description": "The main website for Once.SH",
  "main": "index.js",
  "scripts": {
    "start": "node ./bin/server.js",
    "build": "tsc",
    "local": "cross-env NODE_ENV=development ENV=local DEBUG=once:* nodemon -e js,ts,jsx,tsx,yml -x ts-node bin/server.ts",
    "test": "npm-run-all lint:* test:*",
    "test:unit": "cross-env TS_NODE_PROJECT=tsconfig.ava.json ava",
    "lint:tsc": "tsc --noEmit",
    "lint:lint": "xo --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kolyaventuri/once-sh.git"
  },
  "keywords": [
    "once",
    "secret",
    "onetimesecret"
  ],
  "author": "Kolya Venturi <me@kolya.co>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kolyaventuri/once-sh/issues"
  },
  "homepage": "https://github.com/kolyaventuri/once-sh#readme",
  "dependencies": {
    "debug": "^4.3.1",
    "http-status": "^1.5.0",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-cors": "0.0.16",
    "koa-helmet": "^6.0.0",
    "koa-logger": "^3.2.1",
    "koa-mount": "^4.0.0",
    "koa-router": "^10.0.0",
    "koa-static": "^5.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@types/debug": "^4.1.5",
    "@types/enzyme": "^3.10.8",
    "@types/koa": "^2.11.6",
    "@types/koa-cors": "0.0.0",
    "@types/koa-helmet": "^6.0.1",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.4.1",
    "@types/koa-static": "^4.0.1",
    "@types/node": "^14.14.14",
    "@types/react": "^17.0.0",
    "@types/sinon": "^9.0.9",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.4.1",
    "ava": "^3.14.0",
    "cross-env": "^7.0.3",
    "enzyme": "^3.11.0",
    "eslint": "^7.16.0",
    "eslint-config-xo": "^0.33.1",
    "eslint-config-xo-react": "^0.23.0",
    "eslint-config-xo-typescript": "^0.37.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "esm": "^3.2.25",
    "husky": "^4.3.6",
    "ignore-styles": "^5.0.1",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "proxyquire": "^2.1.3",
    "sinon": "^9.2.2",
    "stylelint": "^13.8.0",
    "stylelint-config-recommended": "^3.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "xo": "^0.36.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all lint:tsc && lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "xo --fix"
    ]
  },
  "xo": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": [
        "./tsconfig.json"
      ]
    },
    "extends": [
      "xo-typescript",
      "plugin:@typescript-eslint/recommended"
    ],
    "extensions": [
      "ts"
    ],
    "space": true,
    "compilerOptions": {
      "strict": true
    },
    "rules": {
      "@typescript-eslint/camelcase": 0,
      "indent": 0,
      "@typescript-eslint/indent": [
        "error",
        2
      ],
      "@typescript-eslint/no-explicit-any": 0
    },
    "overrides": [
      {
        "files": "test/**/*.ts",
        "rules": {
          "@typescript-eslint/explicit-function-return-type": 0
        }
      }
    ],
    "settings": {
      "react": {
        "version": "16.5"
      }
    },
    "env": [
      "node"
    ],
    "include": [
      "**/*.ts?(x)"
    ],
    "ignore": [
      "*.js",
      "scripts/**/*"
    ]
  },
  "ava": {
    "babel": {
      "compileEnhancements": false,
      "compileAsTests": [
        "test/helpers/**/*.ts"
      ]
    },
    "extensions": [
      "ts",
      "tsx"
    ],
    "files": [
      "test/**/*.test.ts?(x)"
    ],
    "require": [
      "esm",
      "ts-node/register",
      "tsconfig-paths/register",
      "./test/helpers/setup-enzyme.ts"
    ]
  }
}
